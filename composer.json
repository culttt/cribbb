{
	"require": {
		"laravel/framework": "4.1.*",
		"league/oauth1-client": "~1.0",
		"mitch/laravel-doctrine": "~0.3"
	},
	"require-dev": {
		"phpunit/phpunit": "~4.0",
		"mockery/mockery": "~0.8",
		"fzaninotto/faker": "~1.3"
	},
	"autoload": {
		"psr-0": {
			"Cribbb": "app/"
		},
		"classmap": [
			"app/commands",
			"app/controllers",
			"app/models",
			"app/database/migrations",
			"app/database/seeds",
			"app/tests/TestCase.php"
		]
	},
	"scripts": {
		"pre-update-cmd": [
			"php artisan clear-compiled"
		],
		"post-install-cmd": [
			"php artisan optimize"
		],
		"post-update-cmd": [
			"php artisan optimize"
		]
	},
	"config": {
		"preferred-install": "dist"
	}
}
